---
import "@design-system/styles/global.css";
import Header from "../layout/Header.astro";
import Analytics from "./Analytics.astro";
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  subTitle?: string;
  displayTitleInHeader?: boolean;
  opacity?: string;
  fadeIn?: boolean;
}

const { title, opacity = "0.75", subTitle = "", displayTitleInHeader = true, fadeIn = false } = Astro.props;

const headerImageUrl = `/assets/${title.toLowerCase()}-header.webp`
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@fancyapps/ui@5.0/dist/fancybox/fancybox.css"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
    <Analytics />
  </head>
  <body>
    <div class="full-page">
      <Header />
      <div class={`content-container ${fadeIn ? 'fade-in' : ''}`}>
        <div class="image-banner">
          <img src={headerImageUrl} />
          {displayTitleInHeader && 
          <h1>{title}</h1>
          <h2>{subTitle}</h2>}
        </div>
        <slot />
      </div>
    </div>

    <footer class="center">
      <!-- <div class="container flex items-center justify-space-between">
        <ThemeToggle />
        <span>© 2024 Kevin Verreault</span>
        <SocialMediaLinks />
      </div> -->
      <span>© 2024 Kevin Verreault</span>
    </footer>
  </body>
</html>

<script is:inline>
  document.addEventListener('astro:before-preparation', () => {
  });
  document.addEventListener('astro:after-preparation', () => {
  });
</script>

<style define:vars={{opacity}}>
  body {
    overflow-y: scroll;
  }

  footer {
    height: 8em;
    width: 100%;
    background-color: hsl(var(--color-primary));
    text-align: center;
    font-size: 18px;
  }

  footer span {
    color: hsl(var(--color-on-primary));
  }

  footer div {
    flex-grow: 1;
  }

  .full-page {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .content-container {
    position: relative;
  }

  .image-banner {
    height: 400px;
    margin: 0 auto;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    opacity: var(--opacity);
    transition: opacity 0.75s ease;
  }

  .image-banner > img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    object-fit: cover;
  }

  .image-banner.loaded {
    opacity: var(--opacity);
  }

  .image-banner > h1,h2 {
    color: white;
  }

  .image-banner > h1 {
    font-size: 4rem;
    text-shadow: 0.5px 0.5px 4px var(--color-surface);
  }

  .image-banner > h2 {
    margin-left: 0.67em;
    margin-right: 0.67em;
  }
</style>

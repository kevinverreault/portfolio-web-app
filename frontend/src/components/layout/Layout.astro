---
import "@design-system/styles/global.css";
import Header from "../layout/Header.astro";
// import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  subTitle?: string;
  displayTitleInHeader?: boolean;
  opacity?: string;
}

const { title, opacity = "0.75", subTitle = "", displayTitleInHeader = true } = Astro.props;

const headerImageUrl = `/assets/${title.toLowerCase()}-header.webp`
const headerImageUrlCss = `url('${headerImageUrl}')`

---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@fancyapps/ui@5.0/dist/fancybox/fancybox.css"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- <ViewTransitions /> -->
  </head>
  <body>
    <div class="full-page-content">
      <Header />
      <div class="image-header">
        {displayTitleInHeader && 
        <h1>{title}</h1>
        <h2>{subTitle}</h2>}
      </div>
      <slot />
    </div>

    <footer class="center">
      <!-- <div class="container flex items-center justify-space-between">
        <ThemeToggle />
        <span>© 2024 Kevin Verreault</span>
        <SocialMediaLinks />
      </div> -->
      <span>© 2024 Kevin Verreault</span>
    </footer>
  </body>
</html>

<script is:inline define:vars={{headerImageUrl}}>
  const imageToLoad = new Image(0, 0)
  imageToLoad.style.display = 'none'
  imageToLoad.addEventListener('load', function() {
    const image = document.querySelector('div.image-header')
    image?.classList.add('loaded')
  });
  imageToLoad.src = headerImageUrl
</script>

<style define:vars={{headerImageUrl : headerImageUrlCss, opacity}}>
  body {
    overflow-y: scroll;
  }

  footer {
    height: 8em;
    width: 100%;
    background-color: hsl(var(--color-primary));
    text-align: center;
    font-size: 18px;
  }

  footer span {
    color: hsl(var(--color-on-primary));
  }

  footer div {
    flex-grow: 1;
  }

  .full-page-content {
    min-height: 100vh;
  }

  .image-header {
    height: 400px;
    margin: 0 auto;
    background-position: 50%;
    background-repeat: no-repeat;
    background-size: cover;
    background-image: var(--headerImageUrl);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: opacity 0.75s ease;
  }

  .image-header.loaded {
    opacity: var(--opacity);
  }

  .image-header > h1,h2 {
    color: white;
  }

  .image-header > h1 {
    font-size: 4rem;
    text-shadow: 0.5px 0.5px 4px var(--color-surface);
  }

  .image-header > h2 {
    margin-left: 0.67em;
    margin-right: 0.67em;
  }
</style>

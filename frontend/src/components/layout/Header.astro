---
import '@design-system/styles/global.css'
import { NavigationItems } from '../../data/navigation.js'
import NavigationMenu from '@design-system/components/navigation/NavigationMenu.astro'
---

<header>
  <div class="container color-background text-on-background flex">
    <div class="site-info color-primary flex flex-column justify-center">
      <span class="ff-serif text-3xl">Kevin Verreault</span>
      <span class="ff-sans text-md">Photographie de la nature</span>
    </div>
    <div class="navigation">
      <NavigationMenu navigationItems={NavigationItems}> 
    </div>
  </div>
</header>

<style>

header > .container {
  height: 8em;
  --gap: 0;
}

.site-info {
  /* flex-grow: 1; */
}

.navigation {
  flex-grow: 1;
}

</style>
